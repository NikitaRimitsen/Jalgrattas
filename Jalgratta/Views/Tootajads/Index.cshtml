@model IEnumerable<Jalgratta.Models.Tootajad>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tootajad</h1
<p>
    <a asp-action="Create">Lisama Uus</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vanus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staaz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vanus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staaz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TootajadId">Muuda</a> |
                <a asp-action="Details" asp-route-id="@item.TootajadId">Detailid</a> |
                <a asp-action="Delete" asp-route-id="@item.TootajadId">Kustuta</a>
            </td>
        </tr>
}
    </tbody>
</table>
