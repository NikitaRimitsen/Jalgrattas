@model IEnumerable<Jalgratta.Models.Teenus>
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Teenus</h1>


<div class="block-left3">




@if(this.User.IsInRole("Admin")){
<p>
    <a asp-action="Create">Lisama Uus</a>
</p>
}
else{}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hind) 
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hind) €
            </td>
            
            <td>
                @if(this.User.IsInRole("Admin")){
                 <a asp-action="Edit" asp-route-id="@item.TeenusId">Muuda</a>
                <a asp-action="Delete" asp-route-id="@item.TeenusId">Kustuta</a>
                }
                else{}
                </td>
        </tr>
}
    </tbody>
</table>

</div>
<div class="block-right3">
<div id="hoolduslite">
    <strong style="">Hooldus Lite 40 €</strong>

    <p>
        Rataste sirgendamine ja reguleerimine, käikude ja pidurite reguleerimine,
        rataste pumpamine, jalgratta seisundi hindamine, lihtsate komponentide(kett, Piduriklotsid, kaablid jne) asendamine.).
    </p>
    <p style="font-style: italic; font-size: 16px">Varuosade maksumus ei sisaldu hinnas.</p>
    </>
</div>
<div id="hoolduspremium">
    <br />

    <strong style="">Hooldus Premium 89 €</strong>

    <p>
        Rataste redigeerimine ja reguleerimine, käikude ja pidurite reguleerimine, rataste pumpamine,
        lihtsate komponentide vahetus (kett, piduriklotsid, trossid jne) puhastamine / määrimine / rooliotsa reguleerimine,
        puhastamine / määrimine / vankri reguleerimine, puhastamine / määrimine / reguleerimine esi- ja tagaratta puksid,
        esikäikude ja mõlema käiguvahetaja puhastamine, vigaste või valesti käituvate komponentide väljavahetamine.
    </p>
    <p style="font-style: italic; font-size: 16px">Varuosade maksumus ei sisaldu hinnas.</p>
</div>


<a href="/Teenusetelimuses/Create">
    <button class="cybr-btn" style="margin-left: 8%;">
        Broneerima<span aria-hidden></span>
        <span aria-hidden class="cybr-btn__glitch">Broneerima</span>
    </button>
</a>
</div>